clc;
clear;
close all;

x = [1 2 3 2 1];

[R, lags] = xcorr(x);

figure;
stem(lags, R, 'filled');
grid on;
title('Autocorrelation using xcorr()');
xlabel('Lag');
ylabel('R_{xx}(m)');
