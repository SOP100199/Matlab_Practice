% % % % % 
% Exponential Signals in All 8 Quadrants (Using Subplots)

% clc; 
% clear; 
% close all;
% 
% f = input("Enter number of steps: ");
% a = input("Enter value of a (0<a<1): ");
% 
% if a <= 0 || a >= 1
%     error("Signal is unbounded for given a");
% end
% 
% n = -f:f;
% 
% % Unit step signals (logical form)
% u     = n >= 0;     % u(n)
% urev  = n <= -1;    % u(-n-1)
% 
% % Exponentials
% exp_pos = a.^n;     
% exp_neg = a.^(-n);  
% 
% % All 8 cases
% y{1} =  exp_pos .* u;
% y{2} =  exp_neg .* urev;
% y{3} = -exp_neg .* urev;
% y{4} = -exp_pos .* u;
% y{5} =  exp_pos .* u + exp_neg .* urev;
% y{6} =  exp_pos .* u - exp_neg .* urev;
% y{7} = -exp_pos .* u + exp_neg .* urev;
% y{8} = -exp_pos .* u - exp_neg .* urev;
% 
% titles = {
%     "1st:  a^n u(n)"
%     "2nd:  a^{-n} u(-n-1)"
%     "3rd: -a^{-n} u(-n-1)"
%     "4th: -a^n u(n)"
%     "1 & 2"
%     "1 & 3"
%     "2 & 4"
%     "3 & 4"
%     };
% 
% figure;
% 
% for k = 1:8
%     subplot(4,2,k)
%     stem(n, y{k}, "filled")
%     title(titles{k})
%     grid on
% end


